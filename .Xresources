! ..........................
! rxvt-unicode configuration
! ..........................

! special
*.foreground:   #ffffff
*.background:   #111111
*.cursorColor:  #eab700

! black
*.color0:       #4d4d4c
*.color8:       #8e908c

! red
*.color1:       #c82829
*.color9:       #c82829

! green
*.color2:       #718c00
*.color10:      #718c00

! yellow
*.color3:       #f5871f
*.color11:      #eab700

! blue
*.color4:       #4271ae
*.color12:      #3e999f

! magenta
*.color5:       #8959a8
*.color13:      #8959a8

! cyan
*.color6:       #00d8eb
*.color14:      #67fff0

! white
*.color7:       #ffffff
*.color15:      #ffffff


! scrolling
URxvt.scrollTtyOutput: true
URxvt.scrollWithBuffer: true
URxvt.scrollTtyKeypress: true

! font settings
URxvt.font: xft:terminus:size=10

! spacing
URxvt.letterSpace: -4

! transparency
URxvt.transparent: false
URxvt.shading: 10

! enable/disable scrollbar
URxvt.scrollBar: false

! copy/paste (using perl extension: clipboard)
URxvt.perl-ext-common: clipboard

URxvt.clipboard.autocopy: true
URxvt.keysym.M-c: perl:clipboard:copy
URxvt.keysym.M-v: perl:clipboard:paste
